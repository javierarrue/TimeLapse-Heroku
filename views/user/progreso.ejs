<%- include('../templates/head', {tituloWeb: '- Mi Progreso' }) %>

    <!-- Start User Profile Area -->
    <section class="about-us section">
        <div class="">
            <div class="row">

                <%- include('templates/aside') %>

                    <div class="col-lg-9 col-md-8">
                        <div class="container mt-4">
                            <div class="about-left mt-4">
                                <div class="section-title">
                                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Mi Progreso</h2>
                                    <p class="wow fadeInUp" data-wow-delay=".6s">Aquí se encuentran tus progresos y
                                        logros en tus cursos.<i class="far fa-smile-beam"></i></p>
                                </div>
                            </div>

                            <div class="row">
                                <% if (cursos.length>= 1) { %>
                                    <% cursos.forEach(curso => { %>
                                        <div class="col-lg-6 col-md-12 mb-5">
                                            <div class="own-card wow fadeInUp" data-wow-delay=".2s">
                                                <!-- Cintillo de completado -->
                                                <%if(curso.progress == 100){ %> 
                                                <div class="ribbon-wrapper-green">
                                                    <div class="ribbon-green">Completado</div>
                                                </div>
                                                <% } %> 
                                                <!-- /. Cintillo de completado -->
                                                <div class="row">
                                                    <div class="col-12 text-center">
                                                        <p class="mb-2">Curso de <%= curso.name %></p>
                                                        <img src="images/products/<%= curso.logo %>"
                                                            alt="logo_curso" height="90px" class="mb-2">
                                                    </div>
                                                    <div class="col-12">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 mb-3">
                                                                <p class="mb-1">Tu progreso es de un</p>
                                                                <div class="progress mb-2"
                                                                    style="height: 20px;">
                                                                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                                        role="progressbar"
                                                                        style="width: <%= curso.progress%>%"
                                                                        aria-valuenow="100"
                                                                        aria-valuemin="0"
                                                                        aria-valuemax="<%= curso.progress%>"><%= curso.progress%>%</div>
                                                                </div>
                                                               <small>Te quedan: <span class="text-primary"> <%= curso.missing%> Módulos</span></small>
                                                            </div>
                                                            <div class="col-lg-12 col-md-12 text-center">
                                                                <img src="images/ranks/<%= curso.rankLogo%>" alt="" height="80px">
                                                            </div>
                                                            <span class="text-center text-primary font-weight-bold"><%= curso.rankName%></span>
                                                        </div>
            
                                                        <div class="button mt-3 mb-2 text-center">
                                                            <a href="/curso/<%= curso.name %> " class="btn">Vizualizar Curso</a>
                                                        </div>
                                                    </div>
            
                                                </div>
            
                                            </div>
                                        </div>
                                        <% }) %>
                                            <% } else { %>
                                                <div class="col-lg-12">
                                                    <div class="row">
                                                        <div class="col-lg-2 d-flex justify-content-end">
                                                            <img class="d-inline" src="images/service/imagen2.png"
                                                                alt="img" style="width: 50px;">
                                                        </div>
                                                        <div class="col-lg-10 d-flex align-items-center">
                                                            <h6 class="">No has comprado ningun curso, dirigite a la tienda para adquirir uno y empesar a aprender.</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>

                            </div>

                        </div>
                    </div>

            </div>
        </div>
    </section>
    <!-- /End User Profile Area -->
    <script>
        const i = document.querySelectorAll('i');
        const h6 = document.querySelectorAll('h6');

        i[1].classList.add('text-primary');
        h6[1].classList.add('text-primary');
    </script>
    <%- include('../templates/footer') %>