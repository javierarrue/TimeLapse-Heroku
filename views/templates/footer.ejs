                                <div class="col-md-12 col-6 mb-3">
                                    <label for="correo" class="col-form-label"><b>Usuario:</b></label>
                                    <input type="text" class="form-control" id="usuario" name="user" required>
                                </div>

                                <div class="col-md-12 col-6 mb-3">
                                    <label for="contraseña" class="col-form-label"><b>Contraseña:</b></label>
                                    <input type="password" class="form-control" id="contraseña" name="password"
                                        required pattern=".{8,}"   required title="Minimo 8 Carácteres">
                                </div>

                            </div>

                            <input type="checkbox" id="terminos" required>
                            <label for="terminos"> Acepto la politica de privacidad</label> <a
                                href="/politicaPrivacidad">(Ver)</a>

                            <div class="button wow fadeInUp text-center mt-3" data-wow-delay=".1s">
                                <button class="btn" type="submit">Registrarse</button>

                            </div>
                            <hr class="wow fadeInUp" data-wow-delay=".1s">
                            <a class="wow fadeInUp" href="#!" data-bs-toggle="modal" data-bs-target="#registro"
                                data-bs-dismiss="modal" data-wow-delay=".1s">Volver</a>
                        </form>

        </div>
    </div>
</div>

<!-- /FIN Registro Manual -->

<!-- REGISTRO AUTOMATICO -->

