                    <%=mensajeRegistro%>
                </h5>
                <% var modal="regmanual" %>
                    <% } %>
                        <form action="/register" method="POST" class="wow fadeInUp" data-wow-delay=".1s">

                            <div class="row">
                                <div class="col-md-6 col-12 mb-3">
                                    <label for="nombre" class="col-form-label"><b>Nombre:</b></label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" required>
                                </div>

                                <div class="col-md-6 col-12 mb-3">
                                    <label for="apellido" class="col-form-label"><b>Apellido:</b></label>
                                    <input type="text" class="form-control" id="apellido" name="apellido" required>
                                </div>
                                <!--
                                <div class="col-md-6 col-12 mb-3">
                                    <label for="edad" class="col-form-label"><b>Edad:</b></label>
                                    <input type="text" class="form-control" id="edad" name="age" required>
